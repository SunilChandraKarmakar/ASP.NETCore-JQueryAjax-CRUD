@model List<Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">Employee List</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Account Number</th>
                <th><a asp-action="Create" class="btn btn-success text-white"><i class="fas fa-random"></i>&nbsp; New Employee</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Employee employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.AccountNumber</td>
                </tr>   
            }
        </tbody>
        <tfoot>
            <tr>
               <th>Name</th>
               <th>Email</th>
               <th>Department</th>
               <th>Account Number</th>
               <th><a asp-action="Create" class="btn btn-success text-white"><i class="fas fa-random"></i>&nbsp; New Employee</a></th>
            </tr>
        </tfoot>
    </table>
    </div>
</div>

