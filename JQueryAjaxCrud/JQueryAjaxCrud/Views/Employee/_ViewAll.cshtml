@model List<Employee>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Account Number</th>
            <th>
                <a onclick="showInPopup('@Url.Action("Upsert","Employee", null, Context.Request.Scheme)', 'Create Employee')" 
                    class="btn btn-success text-white">
                        <i class="fas fa-random"></i>&nbsp; New Employee
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Employee employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.AccountNumber</td>
            </tr>   
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Account Number</th>
            <th>
                 <a onclick="showInPopup('@Url.Action("Upsert","Employee", null, Context.Request.Scheme)', 'Create Employee')" 
                    class="btn btn-success text-white">
                        <i class="fas fa-random"></i>&nbsp; New Employee
                 </a>
            </th>
        </tr>
    </tfoot>
</table>