@model Employee
@{
    ViewData["Title"] = "Upsert";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">Create Employee</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DepartmentName">Department</label>
                    <input type="text" asp-for="DepartmentName" class="form-control">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AccountNumber">Account Number</label>
                    <input type="number" asp-for="AccountNumber" class="form-control">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Create Employee</button>
        </form>
    </div>
</div>

